<h1>Post your cat</h1>
<p> Please fill the form below:</p>


    <%= form_for @cat do |c| %>
  <div class="newuser">
    <div class="form-group">
      <%= c.label :name, 'Name:' %>
      <%= c.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>

    <div class="form-group">
      <%= c.label :likes_dislikes, 'Likes & Dislikes:' %>
      <%= c.text_area :likes_dislikes, class: "form-control", placeholder: "Likes & Dislikes" %>
    </div>

    <div class="form-group">
      <%= c.label :age, 'Age:' %>
      <%= c.text_field :age, class: "form-control", placeholder: "Age" %>
    </div>

    <div class="form-group">
      <%= c.label :gender, 'Gender:' %>
      <%= c.text_field :gender, class: "form-control", placeholder: "Gender" %>
    </div>

    <div class="form-group">
      <%= c.label :cat_pic, 'Cat Picture:' %>
      <%= c.file_field :cat_pic, class: "form-control" %>
    </div>


      <%= c.submit 'Add Kitty', class: 'btn btn-success' %>
    </div>

<% end %>
